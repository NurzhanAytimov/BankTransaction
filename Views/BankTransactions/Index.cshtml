@model List<BankTransaction.Models.Transaction>
@{
}

<h1>Список сотрудников</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Номер Аккаута</th>
            <th>Бенефициары</th>
            <th>Наименование банка</th>
            <th>Сумма</th>
            <th>Дата</th>
            <th>
                <a asp-controller="BankTransactions" asp-action="Create" class="btn btn-sm btn-success">Создать
                    <i class="fa-solid fa-plus"></i>
                </a>
            </th>
            
        </tr>
    </thead>

    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Id</td>
                <td>@transaction.AccountName</td>
                <td>@transaction.Benefeciary</td>
                <td>@transaction.BankName</td>
                <td>@transaction.Summa</td>
                <td>@transaction.Date.ToString("dd-MM-yyyy")</td>
                <td>
                    <div class="btn-group btnbtn-group-sm">
                    <a href="BankTransactions/Delete/@transaction.Id" class="btn btn-danger">
                        <i class="far fa-trash-alt"></i>
                    </a>
                    <a href="BankTransactions/Edit/@transaction.Id" class="btn btn-warning">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                        </div>
                </td>

            </tr>
        }
    </tbody>

</table>



